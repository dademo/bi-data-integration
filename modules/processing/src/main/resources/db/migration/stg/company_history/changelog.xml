<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="dademo">
        <createTable tableName="company_history">
            <column name="siren" type="VARCHAR(9)"/>
            <column name="nic" type="VARCHAR(5)"/>
            <column name="siret" type="VARCHAR(14)"/>
            <column name="end_date" type="DATE"/>
            <column name="begin_date" type="DATE"/>
            <column name="institution_administrative_state" type="VARCHAR(1)"/>
            <column name="institution_administrative_state_change" type="BOOLEAN"/>
            <column name="institution_1_name" type="VARCHAR(50)"/>
            <column name="institution_2_name" type="VARCHAR(50)"/>
            <column name="institution_3_name" type="VARCHAR(50)"/>
            <column name="institution_name_change" type="BOOLEAN"/>
            <column name="institution_usual_name" type="VARCHAR(100)"/>
            <column name="institution_usual_name_change" type="BOOLEAN"/>
            <column name="institution_primary_activity" type="VARCHAR(6)"/>
            <column name="institution_primary_activity_nomenclature" type="VARCHAR(8)"/>
            <column name="institution_primary_activity_change" type="BOOLEAN"/>
            <column name="institution_employer_nature" type="VARCHAR(1)"/>
            <column name="institution_employer_nature_change" type="BOOLEAN"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
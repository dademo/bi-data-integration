<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="dademo">
        <createTable tableName="naf_codes">
            <column name="naf_code" type="VARCHAR(5)">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="CLOB"/>
            <column name="title_65" type="VARCHAR(65)"/>
            <column name="title_40" type="VARCHAR(40)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="dademo">
        <sql dbms="postgresql">
            ALTER TABLE "naf_codes" SET UNLOGGED
        </sql>
    </changeSet>
</databaseChangeLog>